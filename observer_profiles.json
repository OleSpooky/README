  "profiles": [
    {
      "name": "baseline_homogeneous",
      "description": "Baseline configuration with uniform coupling across all nodes. Represents an observer viewing a homogeneous information landscape with no structural pockets.",
      "category": "baseline",
      "parameters": {
        "network": {
          "N": 21,
          "source_j": 10,
          "topology": "linear_chain"
        },
        "coupling": {
          "type": "uniform",
          "baseline": 1.0,
          "pockets": []
        },
        "thermodynamics": {
          "beta": 1.5,
          "theta": 1.0,
          "theta_type": "uniform"
        },
        "simulation": {
          "M": 1000,
          "T": 60,
          "threshold": 0.001,
          "continuous_source": false
        }
      },
      "expected_behavior": "Information decays uniformly from the source with no localized persistence enhancement",
      "use_cases": ["control_experiment", "baseline_comparison", "teaching_example"]
    },
